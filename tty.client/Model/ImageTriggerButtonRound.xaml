<local:CheckControl x:Name="IconButtonthis" x:Class="tty.Model.ImageTriggerButtonRound"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:tty.Model"
             mc:Ignorable="d" 
             d:DesignHeight="32" d:DesignWidth="48" Background="Transparent" MouseMove="IconButton_MouseMove" MouseLeave="IconButton_MouseLeave" MouseDown="IconButton_MouseDown" MouseUp="IconButton_MouseUp">
    <Grid>
        <Ellipse x:Name="elp1" />
        <Ellipse x:Name="elp2" Margin="8">
            <Ellipse.Fill >
                <ImageBrush ImageSource="{Binding ImageSource,ElementName=IconButtonthis}"/>
            </Ellipse.Fill> 
        </Ellipse>
        <!--<TextBlock x:Name="TextBlockIcon" Style="{StaticResource IFont}" FontSize="14" Text="&#xe842;"/>-->
        <Ellipse x:Name="TextBlockIcon" Margin="8">
            <Ellipse.Fill >
                <ImageBrush ImageSource="/Assets/ic_huaji.png"/>
            </Ellipse.Fill>
        </Ellipse>
    </Grid>
</local:CheckControl>
